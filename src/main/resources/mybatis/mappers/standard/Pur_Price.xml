<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mt.mapper.standard.Pur_PriceMapper">

    <!--插入历史价格库-->
    <insert id="InsertPrice">
        insert into cy_historical_price (fd_id
        ,fd_orderid
        ,fd_offer_date
        ,fd_model
        ,fd_unit
        ,fd_number
        ,fd_tax
        ,fd_offer
        ,fd_supplier_name
        ,fd_supplier_code
        ,fd_inventory_no
        ,fd_inventory_name
        ,fd_invoice_amount
        ,fd_payment_amount
        ,fd_record_status
        ,fd_data_sources
        ,fd_creat_time
        ,fd_remarks) values( #{fd_id}
        ,#{fd_orderid}
        ,#{fd_offer_date}
        ,#{fd_model}
        ,#{fd_unit}
        ,#{fd_number}
        ,#{fd_tax}
        ,#{fd_offer}
        ,#{fd_supplier_name}
        ,#{fd_supplier_code}
        ,#{fd_inventory_no}
        ,#{fd_inventory_name}
        ,#{fd_invoice_amount}
        ,#{fd_payment_amount}
        ,#{fd_record_status}
        ,1
        ,getdate()
        ,#{fd_remarks})
    </insert>

    <!--中标后退回二次报价 更新历史价格库状态为6-->
    <update id="update_status">
        update cy_historical_price set fd_record_status='6' where fd_id=#{fd_id}
    </update>

    <!--根据存货编号、供应商编码查询最新的中标报价信息-->
    <select id="show_Price" parameterType="String" resultType="com.mt.pojo.standard.cy_historical_price">
        select * from cy_historical_price where fd_record_status='2'  and fd_inventory_no=#{fd_inventory_no}
        and fd_supplier_code=#{fd_supplier_code}
    </select>

    <!--生成供应商发货单主表-->
    <insert id="Insert_deliver">
        insert into cy_supplier_deliver (fd_id
        ,fd_order_id
        ,fd_no
        ,fd_apply_no
        ,fd_creat_person
        ,fd_creat_time
        ,fd_supplier_name
        ,fd_supplier_code) values(#{fd_id}
        ,#{fd_order_id}
        ,#{fd_no}
        ,#{fd_apply_no}
        ,#{fd_creat_person}
        ,getdate()
        ,#{fd_supplier_name}
        ,#{fd_supplier_code})
    </insert>

    <!--更新供应商发货主表数据-->
    <update id="update_deliver">
        update cy_supplier_deliver set fd_modificatio_person=#{fd_modificatio_person},fd_modificatio_time=getdate()
        where fd_id=#{fd_id}
    </update>

    <!--根据采购员、供应商ID划分显示数据-->
    <select id="select_deliver" resultType="com.mt.pojo.standard.cy_supplier_deliver">
        select * from cy_supplier_deliver where 1=1
        <if test="fd_creat_person != null and fd_creat_person != ''">
            and fd_creat_person = #{fd_creat_person}
        </if>
        <if test="fd_supplier_name != null and fd_supplier_name != ''">
            and fd_supplier_name = #{fd_supplier_name}
        </if>
    </select>

    <!-- 生成供应商发货子表数据-->
    <insert id="insert_detail">
        insert into cy_supplier_deliver_details ( fd_id
        ,fd_parent_id
        ,fd_order_ids
        ,fd_order_person
        ,fd_inventory_no
        ,fd_inventory_name
        ,fd_model
        ,fd_unit
        ,fd_purchase_avaqty
        ,fd_tax
        ,fd_ship_addr
        ,fd_arrival_house) values(#{fd_id}
        ,#{fd_parent_id}
        ,#{fd_order_ids}
        ,#{fd_order_person}
        ,#{fd_inventory_no}
        ,#{fd_inventory_name}
        ,#{fd_model}
        ,#{fd_unit}
        ,#{fd_purchase_avaqty}
        ,#{fd_tax}
        ,#{fd_ship_addr}
        ,#{fd_arrival_house})
    </insert>

    <!--更新供应商子表数据-->
    <update id="update_detail">
        update cy_supplier_deliver_details set fd_shipment_qty=#{fd_shipment_qty}
        ,fd_arrival_certificate=#{fd_arrival_certificate}
        ,fd_remarks=#{fd_remarks}
        ,fd_arrival_button=#{fd_arrival_button}
    </update>

    <!--根据主表ID查询供应商发货子表数据-->
    <select id="select_detail" resultType="com.mt.pojo.standard.cy_supplier_deliver_details">
        select * from cy_supplier_deliver_details where fd_parent_id=#{fd_parent_id}
    </select>

</mapper>